{{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        <div class="form-error">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content) }}
        <div class="form-error">
            {{ form_errors(form.content) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.status) }}
        <div class="btn-group">
            {% for choice in form.status %}
                {{ form_widget(choice, {'attr': {'class': 'btn-check'}}) }}
                {{ form_label(choice, null, {'label_attr': {'class': 'btn btn-outline-primary'}}) }}
            {% endfor %}
        </div>
    </div>
    <button class="btn btn-primary mt-4">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
