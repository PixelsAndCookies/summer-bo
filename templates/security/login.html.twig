{% extends 'base.html.twig' %}

{% block title %}Summer - Connexion{% endblock %}
{% block body %}
    <div class="container login mt-5">
        <h1>Formulaire de connexion</h1>
        <form action="{{path('security.login')}}" method="POST">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes identifié comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

            <div class="form-group">
                <label for="email_user" class="form-label mt-4">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="password_user" class="form-label mt-4">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary btn-lg mt-4" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}