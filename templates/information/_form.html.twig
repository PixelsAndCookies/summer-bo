{{ form_start(form) }}
        <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div class="form-error">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.text) }}
        {{ form_widget(form.text) }}
        <div class="form-error">
            {{ form_errors(form.text) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.link) }}
        {{ form_widget(form.link) }}
        <div class="form-error">
            {{ form_errors(form.link) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.icon) }}
        {{ form_widget(form.icon) }}
        <div class="form-error">
            {{ form_errors(form.icon) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.info) }}
        {{ form_widget(form.info) }}
        <div class="form-error">
            {{ form_errors(form.info) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.position) }}
        {{ form_widget(form.position) }}
        <div class="form-error">
            {{ form_errors(form.position) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.status) }}
        <div class="btn-group">
            {% for choice in form.status %}
                {{ form_widget(choice, {'attr': {'class': 'btn-check'}}) }}
                {{ form_label(choice, null, {'label_attr': {'class': 'btn btn-outline-primary'}}) }}
            {% endfor %}
        </div>
    </div>
    <button class="btn btn-primary mt-4">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
