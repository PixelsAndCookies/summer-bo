<form method="post" class="delete_action" action="{{ path('picture.delete', {'id': picture.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
    <button><i class="fa-solid fa-trash"></i></button>
</form>
